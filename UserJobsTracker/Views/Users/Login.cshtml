@model UserJobsTracker.BL.DTOs.LoginDTO
@{
    ViewBag.Title = "Log in";
}
<div class="d-flex justify-content-center mt-5">
    @using (Html.BeginForm("Login", "Users", FormMethod.Post, new { @class = "p-5 bg-danger rounded-4", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="text-center">
            <img class="user" src="https://i.ibb.co/yVGxFPR/2.png" height="100px" width="100px">
            <h1 class="text-white">Have an account ?</h1>
        </div>
        <hr />
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label mb-2 text-white" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label my-2 text-white" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group my-2 text-white">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg mt-5">Log in</button>
            </div>
        </div>
    }
</div>

<div class="form-group d-flex justify-content-center my-3">
    <p>Don't have an account? @Html.ActionLink("Register here", "Register", "Users")</p>
</div>
